<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<com.ridgelineapps.darktower.BoardView  
	    android:id="@+id/boardview"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	/>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="vertical"
    	android:layout_width="wrap_content"
    	android:layout_height="fill_parent"
    	>
		<com.ridgelineapps.darktower.DarkTowerView  
		    android:id="@+id/darktowerview"
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content"
	    	/>
		<GridLayout  
	    	android:layout_width="match_parent" 
	    	android:layout_height="wrap_content"
	        android:alignmentMode="alignBounds"
	    	>
	    	<Button
	    	    android:text="Yes/Buy"
	    	    android:id="@+id/yes_buy"
	    	    android:onClick="yesBuyButton"
	    	    android:layout_row="0"
	    	    android:layout_column="0"
	    	    android:layout_gravity="fill_horizontal"
	    	    />
	    	<Button
	    	    android:text="Repeat"
	    	    android:id="@+id/repeat"
	    	    android:onClick="repeatButton"
	    	    android:layout_row="0"
	    	    android:layout_column="1"
	    	    android:layout_gravity="fill_horizontal"
	    	    />
	    	<Button
	    	    android:text="No/End"
	    	    android:id="@+id/no_end"
	    	    android:layout_row="0"
	    	    android:layout_column="2"
	    	    android:layout_gravity="fill_horizontal"
	    	    />
	    	<Button
	    	    android:text="Haggle"
	    	    android:id="@+id/haggle"
	    	    android:layout_row="1"
	    	    android:layout_column="0"
	    	    android:layout_gravity="fill_horizontal"
	    	    />
	    	<Button
	    	    android:text="Bazaar"
	    	    android:id="@+id/bazaar"
	    	    android:layout_row="1"
	    	    android:layout_column="1"
	    	    android:layout_gravity="fill_horizontal"
	    	    />
	    	<Button
	    	    android:text="Clear"
	    	    android:id="@+id/clear"
	    	    android:layout_row="1"
	    	    android:layout_column="2"
	    	    android:layout_gravity="fill_horizontal"
	    	    />
	    	<Button
	    	    android:text="Ruin"
	    	    android:id="@+id/ruin"
	    	    android:layout_row="2"
	    	    android:layout_column="0"
	    	    android:layout_gravity="fill_horizontal"
	    	    />
	    	<Button
	    	    android:text="Move"
	    	    android:id="@+id/move"
	    	    android:layout_row="2"
	    	    android:layout_column="1"
	    	    android:layout_gravity="fill_horizontal"
	    	    />
	    	<Button
	    	    android:text="Sanctuary"
	    	    android:id="@+id/sanctuary"
	    	    android:layout_row="2"
	    	    android:layout_column="2"
	    	    android:layout_gravity="fill_horizontal"
	    	    />
	    	<Button
	    	    android:text="Dark Tower"
	    	    android:id="@+id/darktower"
	    	    android:layout_row="3"
	    	    android:layout_column="0"
	    	    android:layout_gravity="fill_horizontal"
	    	    />
	    	<Button
	    	    android:text="Frontier"
	    	    android:id="@+id/frontier"
	    	    android:layout_row="3"
	    	    android:layout_column="1"
	    	    android:layout_gravity="fill_horizontal"
	    	    />
	    	<Button
	    	    android:text="Inventory"
	    	    android:id="@+id/inventory"
	    	    android:layout_row="3"
	    	    android:layout_column="2"
	    	    android:layout_gravity="fill_horizontal"
	    	    />
		</GridLayout>
	</LinearLayout>
</LinearLayout>
